
platform :ios, '9.0'

target 'SDDemo' do

    use_frameworks!

# Network
    pod 'Alamofire', '~> 4.4'
    pod 'AlamofireImage', '~> 3.1'

# Persistence
    pod 'RealmSwift', '~> 2.8'

# Mapping
    pod 'ObjectMapper', '~> 2.2'
    pod 'ObjectMapper+Realm', '~> 0'
    
# Cosmetics

    pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git'

end
